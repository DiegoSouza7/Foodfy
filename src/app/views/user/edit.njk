{% extends "cab.njk" %}

{% block content2 %}

<form id="form-delete" action="/adm/users?_method=DELETE" method="post">

</form>

<form action="/adm/users?_method=PUT" method="post">
<div class="controllerAdm">
	<div class="h2Controller">
		<h2>Atualizar usu√°rio</h2>
	</div>

	<div class="button">
		<input form="form-delete" id="form-delete" type="hidden" name="id" value="{{user.id}}"/>
		<button class="remove" type="submit" form="form-delete">Remover</button>
		<input type="hidden" name="id" value="{{user.id}}">
		<button type="submit">Salvar</button>
	</div>
</div>

<section class="showUser">
	<div class="item">
		<div>Nome</div>
		<div>
			<input
				type="text"
				name="name"
				placeholder="nome"
				value= "{{user.name}}"
			>
		</div>
	</div>
	</div>
	<div class="item">
		<div>Email</div>
		<div>
			<input
				type="email"
				name="email"
				placeholder="email"
				value= "{{user.email}}"
			>
		</div>
	</div>
	<div class="item">
		<input type="checkbox" name="is_admin"
		{% if user.is_admin == true %}
		 checked
		{% endif %}
		> Administrador
	</div>
</section>
</form>

{% endblock content2 %}