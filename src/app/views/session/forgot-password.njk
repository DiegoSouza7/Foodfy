{% extends "cabLogin.njk" %}

{% block content3 %}

<section class="login container form">
	<form method="POST" action="/adm/user/forgot-password">
		<div class="header">
			<h2>Esqueceu a Senha?</h2>
		</div>
			<div class="item">
				<div>Email</div>
				<div class="input">
					<input
						type="email"
						name="email"
						placeholder="Digite seu email para recuperar sua senha"
						value="{{user.email}}"
						onblur="Validate.apply(this, 'isEmail')"
					>
				</div>
			</div>
		<button class="button" type="submit">Recuperar</button>        
	</form>
</section>

{% endblock content3 %}