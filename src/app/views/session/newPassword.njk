{% extends "cabLogin.njk" %}

{% block content3 %}

    <section class="login container form">
        <form method="POST" action="/adm/user/password-reset">

            <div class="header">
                <h2>Nova Senha</h2>
            </div>
                <div class="item">
                    <div>Email</div>
                    <div class="input">
                        <input
                            type="email"
                            name="email"
                            placeholder="Digite seu email"
                            value="{{user.email}}"
                            onblur="Validate.apply(this, 'isEmail')"
                        >
                    </div>
                </div>
                
                <div class="item">
                    <div>Senha</div>
                    <div class="input">
                        <input
                            type="password"
                            name="password"
                            placeholder="Digite sua nova senha"
                            required
                        >
                    </div>
                </div>

                <div class="item">
                    <div>Repetir senha</div>
                    <div class="input">
                        <input
                            type="password"
                            name="passwordRepeat"
                            placeholder="Repita sua nova senha"
                            required
                        >
                    </div>
                </div>

                <input type="hidden" name="token" value="{{token}}">

            <button class="button" type="submit">Nova Senha</button>
            
        </form>
    </section>

{% endblock content3 %}